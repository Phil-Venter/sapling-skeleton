{
    "name": "sapling/skeleton",
    "description": "Sapling Skeleton: a minimal starter app powered by Sapling Core.",
    "type": "project",
    "license": "0BSD",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.4",
        "sapling/core": "*"
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "sapling:env": [
            "@php -r \"!file_exists('.env') && file_exists('.env.dist') && copy('.env.dist', '.env');\""
        ],
        "sapling:lint": [
            "find . -name \"*.php\" -not -path \"./vendor/*\" -print0 | xargs -0 -n1 php -l"
        ],
        "sapling:serve": [
            "php -d display_errors=1 -d error_reporting=E_ALL -S localhost:8080 -t public public/index.php"
        ],
        "post-install-cmd": [
            "@sapling:env"
        ],
        "post-update-cmd": [
            "@sapling:env"
        ]
    }
}
